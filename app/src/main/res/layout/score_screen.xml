<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drawing1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="48dp" />
        <ImageView
            android:id="@+id/drawing2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="48dp" />
        <ImageView
            android:id="@+id/drawing3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_row1"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/first_row"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculating"
            android:textColor="@color/white"
            android:textSize="@dimen/score_screen_text_size" />

        <TextView
            android:id="@+id/result2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculating"
            android:textColor="@color/white"
            android:textSize="@dimen/score_screen_text_size" />

        <TextView
            android:id="@+id/result3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculating"
            android:textColor="@color/white"
            android:textSize="@dimen/score_screen_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/score_row1"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:id="@+id/second_row">

        <ImageView
            android:id="@+id/drawing4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp" />
        <ImageView
            android:id="@+id/drawing5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="48dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_row2"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/second_row"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/result4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculating"
            android:textColor="@color/white"
            android:textSize="@dimen/score_screen_text_size" />

        <TextView
            android:id="@+id/result5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculating"
            android:textColor="@color/white"
            android:textSize="@dimen/score_screen_text_size" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/final_row"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/score_row2"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:text="Back to Menu" />

    <Button
        android:id="@+id/experiment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:text="Calculate Scores" />

    <TextView
        android:id="@+id/final_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_row2"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Your Score: "
        android:textColor="@color/white"
        android:textSize="@dimen/score_screen_text_size" />
</RelativeLayout>
